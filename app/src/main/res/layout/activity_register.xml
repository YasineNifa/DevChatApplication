<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="yassine.com.devchatapp.RegisterActivity">

    <include
        layout="@layout/app_bar_layout"
        android:id ="@+id/register_toolbar">
    </include>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_above="@+id/register_name"
        android:layout_alignStart="@+id/register_name"
        android:layout_marginBottom="21dp"
        app:srcCompat="@drawable/signup_photo"/>

    <EditText
        android:id="@+id/register_name"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/input"
        android:drawableLeft="@drawable/ic_action_namee"
        android:ems="10"
        android:hint="Name"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@android:color/background_light"/>

    <EditText
        android:id="@+id/register_email"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/register_name"
        android:layout_below="@+id/register_name"
        android:layout_marginTop="12dp"
        android:background="@drawable/input"
        android:drawableLeft="@drawable/ic_action_uuser"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@android:color/background_light"/>

    <EditText
        android:id="@+id/register_password"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/register_email"
        android:layout_below="@+id/register_email"
        android:layout_marginTop="17dp"
        android:background="@drawable/input"
        android:drawableLeft="@drawable/ic_action_passs"
        android:ems="10"
        android:hint="Password"
        android:inputType="textMultiLine|textPassword"
        android:padding="10dp"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/create_account_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/register_password"
        android:layout_below="@+id/register_password"
        android:layout_marginTop="31dp"
        android:background="@color/colorPrimary"
        android:text="Create account"
        android:textColor="#fff"
        android:textSize="20sp"/>

</RelativeLayout>
